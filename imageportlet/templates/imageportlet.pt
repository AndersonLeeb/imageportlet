<dl tal:attributes="class string:portlet imagePortlet ${view/data/css}">

  <dd>

    <div class="image-wrapper" tal:attributes="style view/getStyle" tal:condition="not:view/data/link">
      <div class="text" tal:condition="view/getVisibleText" tal:content="view/getVisibleText" />
    </div>

    <a tal:attributes="href view/getLink; style view/getStyle" class="image-wrapper" tal:condition="view/getLink">
      <div class="text" tal:condition="view/getVisibleText" tal:content="view/getVisibleText" />
    </a>

  </dd>

</dl>